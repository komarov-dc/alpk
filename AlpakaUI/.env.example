# =============================================================================
# PsyPro Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# BASIC APP SETTINGS
# -----------------------------------------------------------------------------

PORT=4000
NEXTAUTH_URL=http://localhost:4000
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret

# -----------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# -----------------------------------------------------------------------------

DATABASE_URL="postgresql://user:password@localhost:5433/psypro_db?schema=public"

# -----------------------------------------------------------------------------
# JWT AUTHENTICATION
# -----------------------------------------------------------------------------

# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret
JWT_REFRESH_SECRET=your-jwt-refresh-secret

# -----------------------------------------------------------------------------
# BACKEND PROCESSING INTEGRATION
# -----------------------------------------------------------------------------

AI_SERVICE_URL=http://localhost:3000
AI_SERVICE_KEY=your-api-key
AI_SERVICE_TIMEOUT=30000

BACKEND_PROCESSING_URL=http://localhost:3000
# Must match BACKEND_SHARED_SECRET in backend
BACKEND_SECRET=your-shared-secret-here

# -----------------------------------------------------------------------------
# EMAIL SERVICE (Resend)
# -----------------------------------------------------------------------------

RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=reports@yourdomain.com

# Alternative SMTP (optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------

BCRYPT_ROUNDS=10
SESSION_TIMEOUT=3600000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------

CORS_ORIGIN=http://localhost:4000

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------

LOG_LEVEL=info
LOG_DIR=./logs

# -----------------------------------------------------------------------------
# WEBSOCKET (real-time updates)
# -----------------------------------------------------------------------------

WEBSOCKET_URL=ws://localhost:3000
WEBSOCKET_ENABLED=true

# -----------------------------------------------------------------------------
# DEBUG (development only)
# -----------------------------------------------------------------------------

NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=info

NODE_ENV=development
