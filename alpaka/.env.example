# Environment variables for Backend Processing System
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5433/backend_processing?connection_limit=10&pool_timeout=20&connect_timeout=10"

# =============================================================================
# AI PROVIDERS
# =============================================================================

# Yandex Cloud Configuration (for YandexGPT / GPT-OSS)
YANDEX_CLOUD_OAUTH_TOKEN="your-yandex-oauth-token"
YANDEX_CLOUD_API_KEY="your-yandex-api-key"
YANDEX_CLOUD_FOLDER="your-yandex-folder-id"

# Ollama Configuration (local models)
OLLAMA_BASE_URL="http://localhost:11434"

# =============================================================================
# API SECURITY
# =============================================================================

# Shared secret for external API authentication (between Frontend and Backend)
# Generate with: openssl rand -base64 32
BACKEND_SHARED_SECRET=your-shared-secret-here

# Internal secret for worker-to-backend communication
# Generate with: openssl rand -base64 32
BACKEND_INTERNAL_SECRET=your-internal-secret-here

# =============================================================================
# URLS
# =============================================================================

# Worker API URLs
EXTERNAL_API_BASE_URL=http://localhost:4000
INTERNAL_API_BASE_URL=http://localhost:3000

# Frontend URLs
FRONTEND_URL=http://localhost:4000
FRONTEND_ORIGIN=http://localhost:4000

# =============================================================================
# PUBLIC VARIABLES (accessible in browser)
# =============================================================================

NEXT_PUBLIC_FRONTEND_URL=http://localhost:4000
NEXT_PUBLIC_BACKEND_SECRET=your-shared-secret-here
NEXT_PUBLIC_BACKEND_INTERNAL_SECRET=your-internal-secret-here
